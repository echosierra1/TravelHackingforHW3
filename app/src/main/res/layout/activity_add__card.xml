<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Add_Card">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:background="@android:color/background_light">

        <Button
            android:id="@+id/Submit_Card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onAddCard"
            android:text="Submit" />

        <EditText
            android:id="@+id/CardName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Card Name"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/CardStartDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Card Start Date"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/MinSpend"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Minimum Spend"
            android:inputType="number" />

        <EditText
            android:id="@+id/RewardPoints"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Reward Points"
            android:inputType="number" />

    </LinearLayout>
</android.support.constraint.ConstraintLayout>